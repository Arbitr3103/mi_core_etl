# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Frontend files
[{*.js,*.jsx,*.ts,*.tsx,*.json,*.css,*.scss,*.html,*.vue}]
indent_size = 2

# YAML files
[{*.yml,*.yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab

# Package files
[{package.json,composer.json}]
indent_size = 2

# Configuration files
[{*.conf,*.ini}]
indent_size = 4

# SQL files
[*.sql]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2