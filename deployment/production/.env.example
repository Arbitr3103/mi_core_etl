# Production Environment Variables

# Application
VERSION=latest
NODE_ENV=production
LOG_LEVEL=info

# Database
DB_NAME=mdm_production
DB_USER=mdm_user
DB_PASSWORD=your_secure_password_here
DB_ROOT_PASSWORD=your_root_password_here
REPLICATION_PASSWORD=your_replication_password_here

# Redis
REDIS_PASSWORD=your_redis_password_here

# Monitoring
GRAFANA_PASSWORD=your_grafana_password_here

# SSL (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=mdm-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Monitoring and Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_ALERTS_TO=admin@company.com
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USER=alerts@company.com
SMTP_PASSWORD=your_smtp_password

# External APIs
OZON_API_KEY=your_ozon_api_key
OZON_CLIENT_ID=your_ozon_client_id
WB_API_KEY=your_wb_api_key

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here