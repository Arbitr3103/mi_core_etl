# ===================================================================
# APPLICATION SETTINGS
# ===================================================================
APP_ENV=production
APP_DEBUG=false
VERSION=1.0.0
NODE_ENV=production
TIMEZONE=Europe/Moscow

# ===================================================================
# DATABASE CONFIGURATION - MYSQL (Legacy)
# ===================================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=mi_core_db
DB_USER=your_username
DB_PASSWORD=your_password
DB_ROOT_PASSWORD=your_root_password

# ===================================================================
# DATABASE CONFIGURATION - POSTGRESQL (Primary)
# ===================================================================
PG_HOST=localhost
PG_PORT=5432
PG_NAME=mi_core_db
PG_USER=mi_core_user
PG_PASSWORD=your_postgresql_password

# Replication settings
REPLICATION_USER=repl_user
REPLICATION_PASSWORD=your_replication_password

# ===================================================================
# API CONFIGURATION
# ===================================================================
API_BASE_URL=http://localhost/api
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=60

# CORS Configuration
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=*

# API Cache
API_CACHE_ENABLED=true
API_CACHE_TTL=300

# ===================================================================
# CACHE CONFIGURATION
# ===================================================================
CACHE_DRIVER=file
CACHE_PATH=storage/cache
CACHE_PREFIX=mi_core_etl
CACHE_TTL=3600

# Redis Configuration (if using Redis cache)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===================================================================
# LOGGING CONFIGURATION
# ===================================================================
LOG_CHANNEL=file
LOG_PATH=storage/logs
LOG_LEVEL=info
LOG_MAX_FILES=30
LOG_FORMAT="[%datetime%] %level_name%: %message% %context%"
LOG_DIR=/var/log/mi_core_etl
LOG_MAX_SIZE=100MB

# ===================================================================
# EXTERNAL API KEYS - MARKETPLACES
# ===================================================================
OZON_CLIENT_ID=your_ozon_client_id
OZON_API_KEY=your_ozon_api_key
WB_API_KEY=your_wildberries_api_key

# API Request delays (seconds)
OZON_REQUEST_DELAY=0.1
WB_REQUEST_DELAY=0.5

# ===================================================================
# ETL CONFIGURATION
# ===================================================================
ETL_BATCH_SIZE=1000
ETL_TIMEOUT=300

# ETL Schedules (cron format)
ETL_SCHEDULE_OZON="0 */6 * * *"
ETL_SCHEDULE_WB="0 */4 * * *"
ETL_SCHEDULE_CLEANUP="0 1 * * *"

# ===================================================================
# SECURITY SETTINGS
# ===================================================================
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/your_domain.crt
SSL_KEY_PATH=/etc/nginx/ssl/your_domain.key

# ===================================================================
# PERFORMANCE SETTINGS
# ===================================================================
MAX_CONNECTIONS=200
QUERY_TIMEOUT=30
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# ===================================================================
# MONITORING & ALERTS
# ===================================================================
MONITORING_ENABLED=true
ALERT_EMAIL=admin@example.com

# Health check settings
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Alert thresholds
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=85
API_RESPONSE_TIME_THRESHOLD=1000

# ===================================================================
# BACKUP CONFIGURATION
# ===================================================================
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# ===================================================================
# NOTIFICATION SETTINGS
# ===================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_ALERTS_TO=admin@company.com,devops@company.com
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USER=alerts@company.com
SMTP_PASSWORD=your_smtp_password

# ===================================================================
# DATA QUALITY SETTINGS
# ===================================================================
DATA_QUALITY_CHECK_SCHEDULE="0 3 * * *"
MIN_DATA_QUALITY_SCORE=80

# ===================================================================
# ADDITIONAL SETTINGS
# ===================================================================
TEMP_DIR=/tmp/mi_core_etl
UPLOAD_MAX_SIZE=50MB
SESSION_TIMEOUT=3600