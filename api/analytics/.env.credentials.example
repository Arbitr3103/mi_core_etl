# Credential Management Environment Variables
# Copy this file to .env.credentials and fill in your values
# This file should be kept secure and not committed to version control

# ===================================================================
# ENCRYPTION SETTINGS
# ===================================================================
# Master encryption key for credential storage (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=your_base64_encoded_encryption_key_here

# ===================================================================
# NOTIFICATION SETTINGS
# ===================================================================
# Email notifications for credential expiry warnings
EMAIL_ALERTS_TO=admin@company.com,devops@company.com
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USER=alerts@company.com
SMTP_PASSWORD=your_smtp_password

# Slack webhook for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ===================================================================
# ROTATION POLICIES
# ===================================================================
# Days before expiry to send warnings
CREDENTIAL_WARNING_DAYS=7

# Days before expiry to attempt auto-rotation
CREDENTIAL_AUTO_ROTATE_DAYS=3

# Maximum rotation attempts before manual intervention required
CREDENTIAL_MAX_ROTATION_ATTEMPTS=3

# ===================================================================
# MARKETPLACE API CREDENTIALS (LEGACY - MIGRATE TO ENCRYPTED STORAGE)
# ===================================================================
# These will be migrated to encrypted storage automatically
# Keep them here temporarily during migration period

# Ozon API Credentials
OZON_CLIENT_ID=your_ozon_client_id
OZON_API_KEY=your_ozon_api_key

# Wildberries API Credentials
WB_API_KEY=your_wildberries_api_key

# ===================================================================
# SECURITY SETTINGS
# ===================================================================
# File permissions for credential storage
CREDENTIAL_FILE_PERMISSIONS=0600

# Directory permissions for credential storage
CREDENTIAL_DIR_PERMISSIONS=0700

# Maximum credential age before forced rotation (days)
CREDENTIAL_MAX_AGE_DAYS=90

# ===================================================================
# LOGGING SETTINGS
# ===================================================================
# Log level for credential operations (DEBUG, INFO, WARNING, ERROR)
CREDENTIAL_LOG_LEVEL=INFO

# Maximum log file size before rotation (bytes)
CREDENTIAL_LOG_MAX_SIZE=10485760

# Number of rotated log files to keep
CREDENTIAL_LOG_MAX_FILES=5

# ===================================================================
# BACKUP SETTINGS
# ===================================================================
# Enable encrypted credential backups
CREDENTIAL_BACKUP_ENABLED=true

# Backup retention period (days)
CREDENTIAL_BACKUP_RETENTION_DAYS=30

# Backup encryption key (different from main encryption key)
CREDENTIAL_BACKUP_KEY=your_backup_encryption_key_here

# ===================================================================
# MONITORING SETTINGS
# ===================================================================
# Health check interval for credential system (seconds)
CREDENTIAL_HEALTH_CHECK_INTERVAL=300

# Alert threshold for failed credential operations
CREDENTIAL_FAILURE_THRESHOLD=3

# Monitoring endpoint for external health checks
CREDENTIAL_MONITORING_ENDPOINT=/api/analytics/health/credentials

# ===================================================================
# DEVELOPMENT SETTINGS
# ===================================================================
# Enable debug mode for credential operations
CREDENTIAL_DEBUG_MODE=false

# Test mode - use dummy credentials for testing
CREDENTIAL_TEST_MODE=false

# Mock external API calls during testing
CREDENTIAL_MOCK_API_CALLS=false