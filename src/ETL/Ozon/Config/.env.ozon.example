# Ozon ETL System Environment Configuration
# Copy this file to .env.ozon and fill in your actual values

# Application Environment
APP_ENV=development
APP_TIMEZONE=Europe/Moscow
ETL_MEMORY_LIMIT=512M
ETL_TIME_LIMIT=3600

# Ozon API Configuration
OZON_CLIENT_ID=your_client_id_here
OZON_API_KEY=your_api_key_here

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=mi_core
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_SSLMODE=prefer

# Logging Configuration
LOG_LEVEL=info

# Alert Configuration
ALERT_EMAIL_RECIPIENTS=admin@example.com,manager@example.com
SLACK_WEBHOOK_URL=

# Backup Configuration
BACKUP_PATH=/tmp/ozon_etl_backups

# Performance Monitoring
ENABLE_QUERY_LOGGING=false
ENABLE_PROFILING=false