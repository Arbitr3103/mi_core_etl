# Ozon ETL System - Development Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_ENV=development
APP_TIMEZONE=Europe/Moscow
APP_DEBUG=true

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
PG_HOST=localhost
PG_PORT=5432
PG_NAME=ozon_etl_dev
PG_USER=ozon_etl_dev_user
PG_PASSWORD=dev_password_123

# Database connection pool settings (smaller for dev)
DB_MAX_CONNECTIONS=5
DB_CONNECTION_TIMEOUT=30
DB_IDLE_TIMEOUT=300

# =============================================================================
# OZON API CONFIGURATION
# =============================================================================
OZON_CLIENT_ID=your_dev_ozon_client_id_here
OZON_API_KEY=your_dev_ozon_api_key_here

# API rate limiting (lower for development)
OZON_RATE_LIMIT=100
OZON_BURST_LIMIT=10

# =============================================================================
# ETL PROCESSING SETTINGS
# =============================================================================
ETL_MEMORY_LIMIT=512M
ETL_TIME_LIMIT=1800
ETL_BATCH_SIZE=100
ETL_MAX_RETRIES=3

# Processing schedules (more frequent for testing)
PRODUCT_SYNC_INTERVAL=30     # 30 minutes
SALES_SYNC_INTERVAL=15       # 15 minutes  
INVENTORY_SYNC_INTERVAL=10   # 10 minutes

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=DEBUG
LOG_PATH=./Logs
LOG_MAX_FILES=7
LOG_MAX_SIZE=50M

# Enable detailed logging for development
LOG_API_REQUESTS=true
LOG_DATABASE_QUERIES=true
LOG_PERFORMANCE_METRICS=true

# =============================================================================
# MONITORING AND ALERTING
# =============================================================================
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=60     # 1 minute
ALERT_EMAIL=developer@yourcompany.com
ALERT_ON_FAILURES=true
ALERT_ON_PERFORMANCE_ISSUES=false

# Performance thresholds (more lenient for dev)
MAX_EXECUTION_TIME_PRODUCTS=900      # 15 minutes
MAX_EXECUTION_TIME_SALES=1800        # 30 minutes
MAX_EXECUTION_TIME_INVENTORY=900     # 15 minutes

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=false
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=7
BACKUP_BEFORE_MAJOR_OPERATIONS=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# SSL/TLS settings (relaxed for development)
DB_SSLMODE=prefer

# API security settings
API_VERIFY_SSL=true
API_TIMEOUT=30
API_CONNECT_TIMEOUT=10

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================
# Memory and processing limits (smaller for dev)
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=1800
PHP_MAX_INPUT_TIME=300

# Database optimization
DB_STATEMENT_TIMEOUT=180
DB_LOCK_TIMEOUT=30
DB_IDLE_IN_TRANSACTION_TIMEOUT=180

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_DATA_VALIDATION=true
ENABLE_DUPLICATE_DETECTION=true
ENABLE_PERFORMANCE_PROFILING=true
ENABLE_DEBUG_MODE=true

# =============================================================================
# DEVELOPMENT SPECIFIC SETTINGS
# =============================================================================
# Mock API responses for testing
MOCK_API_RESPONSES=false
MOCK_DATA_PATH=./Tests/MockData

# Test data settings
USE_TEST_DATA=false
TEST_DATA_SIZE=small

# Development tools
ENABLE_SQL_PROFILER=true
ENABLE_MEMORY_PROFILER=true
ENABLE_QUERY_LOG=true

# =============================================================================
# EXTERNAL INTEGRATIONS (disabled for dev)
# =============================================================================
# Webhook URLs for notifications (optional)
WEBHOOK_SUCCESS_URL=
WEBHOOK_ERROR_URL=
WEBHOOK_WARNING_URL=

# Slack integration (optional)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#dev-etl-notifications

# Email notifications (disabled for dev)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=dev-noreply@yourcompany.com
SMTP_FROM_NAME="Ozon ETL System (Dev)"