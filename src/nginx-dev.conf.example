# Nginx configuration for Country Filter System - Development Version
# Конфигурация для разработки в домашней директории
# 
# Структура файлов для разработки:
# /home/vladimir/mi_core_etl/src/api/countries.php
# /home/vladimir/mi_core_etl/src/api/countries-by-brand.php
# /home/vladimir/mi_core_etl/src/api/countries-by-model.php
# /home/vladimir/mi_core_etl/src/api/products-filter.php

server {
    listen 80;
    server_name dev.your-domain.com localhost;
    root /home/vladimir/mi_core_etl/src;
    index index.php index.html demo/country-filter-demo.html;

    # Логи
    access_log /var/log/nginx/country-filter-dev-access.log;
    error_log /var/log/nginx/country-filter-dev-error.log;

    # Основная обработка запросов
    location / {
        try_files $uri $uri/ /demo/country-filter-demo.html;
    }

    # ВАЖНО: Обработка API PHP файлов - соответствует структуре src/api/
    location ~ ^/api/.*\.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php8.1-fpm.sock;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
        
        # CORS headers
        add_header Access-Control-Allow-Origin "*" always;
        add_header Access-Control-Allow-Methods "GET, POST, OPTIONS" always;
        add_header Access-Control-Allow-Headers "Content-Type, Authorization" always;
        
        if ($request_method = 'OPTIONS') {
            return 200;
        }
    }

    # Обработка остальных PHP файлов
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:/var/run/php/php8.1-fpm.sock;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }

    # Кэширование статических файлов
    location ~* \.(css|js|png|jpg|jpeg|gif|ico|svg)$ {
        expires 1M;
        add_header Cache-Control "public, immutable";
    }

    # Безопасность - запрет доступа к служебным файлам
    location ~ /\. {
        deny all;
    }

    location ~* \.(log|sql|bak)$ {
        deny all;
    }

    # Сжатие
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/xml+rss application/json;
}